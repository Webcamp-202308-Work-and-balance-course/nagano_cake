<!-- 会員編集画面 -->
<%= render 'admin/homes/admin_layouts' %>
<h1>👤</h1>

<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path, method: :patch do |customer| %>
    <p>会員ID</p>
    <%= @customer.id %>
    <p>氏名</p>
    <%= customer.text_field :first_name %><%= customer.text_field :last_name %>
    <p>フリガナ</p>
    <%= customer.text_field :first_name_kana %><%= customer.text_field :last_name_kana %>
    <p>郵便番号</p>
    <%= customer.text_field :postal_code %>
    <p>住所</p>
    <%= customer.text_field :address %>
    <p>電話番号</p>
    <%= customer.text_field :telephone_number %>
    <p>メールアドレス</p>
    <%= customer.text_field :email %>
    <p>会員ステータス</p>
    <%= customer.text_field :is_active %>
    
    <%= customer.submit "変更を保存" %>

<% end %>