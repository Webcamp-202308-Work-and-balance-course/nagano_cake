<!-- 商品詳細画面 -->
<%= render 'admin/homes/admin_layouts' %>
<h1>👤</h1>
<h2>商品詳細</h2>

    <p>商品画像</p><!-- accept: "image/*"は画像ファイルしか投稿できないようにしている -->
    <% if @item.item_image.attached? %>
        <%= image_tag @item.item_image, size: "100x100" %>
    <% else %>
        <%= image_tag 'no_image_square', size: "100x100" %>
    <% end %>

    <p>商品名</p>
    <p><%= @item.name %></p>
    <p>商品説明</p>
    <%= @item.introduction %>
    <!--<p>ジャンル</p>-->
    <p>税抜価格</p>
    <%= @item.excluding_tax %>
    <!--<p>販売ステータス</p>-->
    <%= @item.is_sales_status %>
    
    </br><%= link_to "編集する", edit_admin_item_path(@item.id) %>

    
