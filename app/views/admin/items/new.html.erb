<!-- 商品新規登録画面 -->
<%= render 'admin/homes/admin_layouts' %>


<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path do |f| %>

    <p>商品画像</p><!-- accept: "image/*"は画像ファイルしか投稿できないようにしている -->
    <%= f.file_field :item_image, accept: "image/*" %>
    <p>商品名</p>
    <%= f.text_field :name %>
    <p>商品説明</p>
    <%= f.text_area :introduction %>
    <!--<p>ジャンル</p>-->
    <p>税抜価格</p>
    <%= f.text_field :excluding_tax %>
    <p>販売ステータス</p>
    <%= f.text_field :is_sales_status %>
    
    <%= f.submit "新規登録" %>
<% end %>