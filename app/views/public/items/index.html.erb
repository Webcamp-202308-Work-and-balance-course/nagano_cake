<!-- 顧客側商品一覧 -->
<%= render 'public/homes/public_layouts' %>

<h2>商品一覧</h2>

<div class="row">
  <% @items.each_slice(4) do |item_slice| %>
    <% item_slice.each do |item| %>
      <div class="col-md-3">
        
        <!-- accept: "image/*"は画像ファイルしか投稿できないようにしている -->
        <% if item.item_image.attached? %>
          <%= link_to image_tag(item.item_image, size: "150x150"), item_path(item.id) %>
        <% else %>
          <%= link_to image_tag('no_image_square', size: "150x150"), item_path(item.id) %>
        <% end %></br>

        
        <%= link_to item.name, item_path(item.id) %></br>

        
        ¥<%= number_with_delimiter(item.excluding_tax) %>

        
      </div>
    <% end %>
  <% end %>
</div>


