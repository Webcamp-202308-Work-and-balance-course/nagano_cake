<!-- マイページ編集 -->
<%= render 'public/homes/public_layouts' %>

<h2>会員情報編集</h2>
<table>
  <%= form_with model: @customer, local: true, url: update_customers_information_path(@customer), method: :patch do |f| %>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, style: "width: 700px;" %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>

<%= f.submit "編集内容を保存", class: 'btn btn-success' %>

<%= link_to "退会する", customers_confirm_path, class: 'btn btn-danger' %>
<% end %>